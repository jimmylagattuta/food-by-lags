<img id="cuttingboard" src="/img/cuttingboardmealprep.jpg" alt="cuttingboardmealprep.jpg">

<div id="add">
	<div class="container">
		<img id="cookbook" src="" width="350px" height="350px" alt="Cookbook Image">
		<% @products.each do |item| %>
			<div id="container">	
				<% if item.stock > 0 %>
					<div id="addtocartform">
						<%= form_tag "/carts", method: :post do %>
							<input type="hidden" name="product_id" value="<%= item.id %>">
							<input type="hidden" name="quantity" value="1">
							<br>
							<input v-on:click="addToBag()" type="submit" value="Add To Cart">
							<br>
						<% end %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>










<% if current_user %>
	<% if current_user.admin %>
		<h2> New Product Admin Only </h2> 
		<%= form_tag "/products/new", method: :post do %>
			<h4> Name: <input type="text" name="name"> </h4>
			<br>
			<h4> Product Type: <input type="text" name="product_type"> </h4>
			<br>
			<h4> Stock: <input type="text" name="stock"> </h4>
			<br>
			<h4> Cost: <input type="text" name="cost"> </h4>
			<br>
			<input type="submit" name="Enter">
		<% end %>
	<% end %>
<% end %>
